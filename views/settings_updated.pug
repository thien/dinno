extends layout


block container
	script(src='/socket.io/socket.io.js')
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')

	include includes/nav
	.container 
		form(method="post")
			.row
				.col-lg-6
					#container
						h1 Your Settings 
						br
						.form-group
							label(for='exampleSelect1') Website Font Size
							select#exampleSelect1.form-control(name="textSize")
								if user_data.textSize == "1x"
									option(selected="selected") 1x
								else
									option 1x
									
								if user_data.textSize == "1.5x"
									option(selected="selected") 1.5x
								else
									option 1.5x
									
								if user_data.textSize == "2x"
									option(selected="selected") 2x
								else
									option 2x
							small#passwordHelpBlock.form-text.text-muted Set the standard font size for labels/text across the website.
						
						
						//- request button
						br
						button.btn.btn-primary.btn-lg.btn-block#submitter( type='submit' value="Submit") Update Settings
						br
						h5 Updated text size to #{user_data.textSize}.
						