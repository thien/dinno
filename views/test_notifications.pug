extends layout

block container
	script(src='/socket.io/socket.io.js')
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')

	include includes/nav
	.container 
		form(method="post")
			.row
				.col-lg-6
					#container
						h1 Pust Notification Test
						.form-group
							label(for='Content') Content

							input#name.form-control.content(name="content" type='content', placeholder='Notification Content' value=content)

						button.btn.btn-primary.btn-lg.btn-block#send( type='submit' value="send") Send Notification

	script
		include assets/push_notifications.js