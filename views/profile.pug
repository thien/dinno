extends layout

block container

	include includes/nav
	.container 
		.row#user_profile_details
			.col-md-4.col-lg-3
				img(src=profile_photo)#profilephoto
			.col-md-6.col-lg-6
				#container
				h1 Hi, I'm #{name}
				h4 
					span.badge.badge-default #{rating}
					|	 #{user_location}
				h6 #{age} years old
				if ownProfile
					a.chat-link(href='editprofile') Edit profile
				a.chat-link(href='chat?id=' + userId) Send me a message
				a(href="google.com") Report me
		.dinnos
				h3 Dinnos
				.row
					each fooditem in fooditems
						.col-md-3
							a(href='fooditem?id=' + fooditem.MealID).card.fooditem-card
								img.card-img-top.img-fluid(src=fooditem.Image, alt='Card image cap')
								.card-profile-container
									img.card-userprofile-img(src=fooditem.ProfileImage, alt='Card image cap')
								.card-block
									h4.card-title #{fooditem.Name}
									p.card-text #{fooditem.Description}
					else
						h5 No food :(
