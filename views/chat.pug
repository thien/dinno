doctype html
html
  head
    title Socket.IO chat
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; margin-right: .5%; }
      #from { width: 10%; }
      #to { width: 10%; }
      #contents { width: 65%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      #messages .server-message{color: red;}
  body
    ul#messages
    form(action='')
      input#from(autocomplete='off')
      input#to(autocomplete='off')
      input#contents(autocomplete='off')
      button Send
    script(src='/controllers/socket.io/socket.io.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    script.
      var socket = io();
      var oldName = "";
      $('form').submit(function(){
      if ($('#from').val() != oldName){
      socket.emit('join', {name: $('#from').val()});
      oldName = $('#from').val();
      }
      socket.emit('chat message', {
      from : $('#from').val(),
      to : $('#to').val(),
      contents : $('#contents').val()
      });
      $('#contents').val('');
      return false;
      });
      socket.on('chat message', function(msg){
      $('#messages').append($('<li>').text(msg));
      });
      socket.on('server message', function(msg){
      $('#messages').append($('<li class="server-message">').text(msg));
      });
