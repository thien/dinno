extends layout


block container
	script(src='/socket.io/socket.io.js')
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
	include includes/nav
	.container 
		form(method="post")
			.row
				.col-lg-6
					#container
						h1 Add Fooditem
						.form-group
							label(for='Food Name') Food Name
							input#exampleInputEmail1.form-control.food-name(name="forename" type='foodname', placeholder='Lettuce' value="saiusages")
						.form-group
							label(for='exampleSelect1') Food Type
							select#exampleSelect1.form-control(name="foodtype")
								option Meal
								option Ingredient
						.form-group
							label(for='exampleTextarea') Description
							textarea#description.form-control(rows='3' maxlength="140" name="description")
							//- small#passwordHelpBlock.form-text.text-muted Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
						.form-group
							label(for='Food Name') Location
							input#exampleInputEmail1.form-control(name="location" type='location', placeholder='Durham, UK')
				.col-lg-4
					#container
						.form-group#pictureupload
							#upload_img_container
								input(id="input_images" name='images' type="file" multiple="true")
						//- request button
						button.btn.btn-primary.btn-lg.btn-block#submitter( type='submit' value="Submit") Add Fooditem
			.row
				.form-group.barcode-scanner-container
					h3 Scan your barcode here!
					#yourElement
									
						
	script
		include assets/upload.js
		include assets/lib/quagga.js
		include assets/barcode.js